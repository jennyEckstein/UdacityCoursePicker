<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Udacity_Course_Item">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Udacity_Course_Item_Title">
        <item name="android:textColor">#1C262F</item>
    </style>

    <style name="Udacity_Course_Item_Inner_Content">
        <item name="android:layout_marginLeft">16sp</item>
    </style>

    <style name="Udacity_Background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Udacity_List">
        <item name="android:background">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="Udacity_TabBar">
        <item name="android:elevation">12dp</item>
    </style>
    <style name="Udacity_AppBar">
        <item name="android:elevation">12dp</item>
    </style>

    <style name="Udacity_List_Item_Image">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>


</resources>