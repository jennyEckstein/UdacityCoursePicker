<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Udacity_Course_Item">
        <item name="android:layout_margin">16sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Udacity_Course_Item_Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1C262F</item>
    </style>

    <style name="Udacity_Course_Item_Inner_Content">
        <item name="android:layout_marginLeft">16sp</item>
    </style>

</resources>
